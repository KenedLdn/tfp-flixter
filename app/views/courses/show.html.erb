<br />
<div class="card-tallbox col-xs-10 col-xs-offset-1">
  <br />
  <h1 class="text-center"><%= @course.title %></h1>
  <br />
  <%= image_tag @course.image, :class=>"img-responsive" %>
  <br />
  <br class="clear"/>
  <div class="col-sm-4 col-xs-12">
    <h3>
      <div class="label label-default">
        <%= number_to_currency(@course.price, :unit => "Â£") %>
      </div>
      <br />
      <br class="clear"/>
      by <% if @course.user_id.nil? %>
          Anonymous
        <% else %>
          <%= @course.user.username %>
        <% end %>
    </h3>
    <br />
    <% if current_user && @course.user == current_user %>
      <%= link_to 'Administer Your Course', edit_instructor_course_path(@course), :class => "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-sm-8 col-xs-12">
    <h3><%= @course.description %></h3>
    <br />
    <h3>Sections</h3>
      <% @course.sections.order(:id).each do |section| %>
      <div class="section">
      <ul>
        <li><%= section.title %></li>
        <% section.lessons.order(:id).each do |lesson| %>
          <div class="lesson">
          <%= link_to lesson_path(lesson) do %>
            <ul>
              <li><b><%= lesson.title %></b></li>
            </ul>
          <% end %>
          </div>
        <% end %>
      </ul>
      </div>
      <% end %>
    <br />
  </div>
  <br class="clear"/>
  <br />
  <br />
</div>

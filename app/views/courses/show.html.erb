<br />
<div class="card-tallbox col-xs-10 col-xs-offset-1">
  <br />
  <h1 class="text-center"><%= @course.title %></h1>
  <br />
  <%= image_tag @course.image, :class=>"img-responsive" %>
  <br />
  <br class="clear"/>
  <div class="col-sm-4 col-xs-12">
    <h3>
      <% if current_user.enrolled_in?(@course) %>
        <div class="label label-info">You Are Enrolled!</div>
      <% else %>
        <%= link_to  'Enroll', course_enrollments_path(@course), method: :post, :class => "btn btn-primary" %>
      <% end %>
      <br class="clear"/>
      <br />
      <div class="label label-default">
        <%= number_to_currency(@course.price, :unit => "Â£") %>
      </div>
      <br />
      <br class="clear"/>
      by <% if @course.user_id.nil? %>
          Anonymous
        <% else %>
          <%= @course.user.username %>
        <% end %>
    </h3>
    <br />
    <% if current_user && @course.user == current_user %>
      <%= link_to 'Administer Your Course', edit_instructor_course_path(@course), :class => "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-sm-8 col-xs-12">
    <h3><%= @course.description %></h3>
    <br />
    <h3>Sections</h3>
      <% @course.sections.order(:id).each do |section| %>
        <br /><br />
        <div class="section text-center">
          <h3><%= section.title %></h3>
          <br class="clear" />
          <% section.lessons.order(:id).each do |lesson| %>
            <%= link_to lesson_path(lesson) do %>
              <div class="col-xs-12 col-sm-6">
                <div class="lesson">
                    <h3 style="color: white"><%= lesson.title %></h3>
                </div>
              </div>
            <% end %>
          <% end %>
          <br class="clear"/>
          <br />
        </div>
      <% end %>
    <br class="clear" />
  </div>
  <br class="clear"/>
  <br />
  <br />
</div>

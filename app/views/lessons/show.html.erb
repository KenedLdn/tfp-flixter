<br />
<div class="card-tallbox col-xs-10 col-xs-offset-1">
  <br />
  <h1 class="text-center"><%= current_lesson.title %></h1>
  <br />

  <% if current_lesson.previous_lesson.present? %>
    <%= link_to lesson_path(current_lesson.previous_lesson), :class => "btn btn-primary pull-left" do %>
      Previous Lesson
      <span class="glyphicon glyphicon-backward"></span>
    <% end %>
  <% end %>

  <% if current_lesson.next_lesson.present? %>
    <%= link_to lesson_path(current_lesson.next_lesson), :class => "btn btn-primary pull-right" do %>
      Next Lesson
      <span class="glyphicon glyphicon-forward"></span>
    <% end %>
  <% end %>

  <br class="clr" />
  <br />

  <video id="my_video_1" class="video-js vjs-default-skin vjs-big-play-centered vjs-fluid"
  controls preload="auto" width="auto" height="auto"
  poster="app/assets/images/black.jpg"
  data-setup='{"example_option":true}'>
    <source src="<%= current_lesson.video.to_s %>" type='video/mp4' />
    <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
  </video>

  <br class="clear" />
  <h2 class="text-center"><%= current_lesson.transcript %></h2>
</div>

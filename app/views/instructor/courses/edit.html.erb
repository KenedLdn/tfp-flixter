<br class="clear" />
<div class="card-tallbox col-xs-10 col-xs-offset-1">
  <h1><%= @course.title %></h1>
  <br class="clr" />
  <%= link_to 'Preview As Student', course_path(@course), :class => 'btn btn-warning pull-right' %>
  <br class="clear"/>

  <h3>Sections</h3>
  <br class="clear" />
  <ul>
    <% @course.sections.order(:id).each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'Add a Lesson', new_instructor_section_lesson_path(section.id), :class => "pull-right btn btn-primary btn-xs" %>
        <br class="clear" />
        <% section.lessons.order(:id).each do |lesson| %>
          <ul>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.transcript %>
              <br class="clear" />
              <br />
            </li>
          </ul>
        <% end %>
        <br />
      </li>
    <% end %>
  </ul>
  <br />

  <%= link_to 'Add Section', new_instructor_course_section_path(@course), :class => "btn btn-primary" %>
  <br />
  <br />
</div>

<br />
<div class="card-tallbox col-xs-10 col-xs-offset-1">
  <h1><%= @course.title %></h1>
  <br class="clr" />
  <%= link_to 'Preview As Student', course_path(@course), :class => 'btn btn-warning pull-right' %>
  <br class="clear"/>

  <h3>Sections</h3>
  <ul>
    <% @course.sections.each do |section| %>
      <li><%= section.title %></li>
    <% end %>
  </ul>
  <br />

  <%= link_to 'Add Section', new_instructor_course_section_path(@course), :class => "btn btn-primary" %>
  <br />
  <br />
</div>
